<%= simple_form_for [:admin, @product] do |f| %>
    <%= f.input :category_id, collection: categories, label: 'Категория', prompt: 'Выберите категорию', selected: @product.category_id %>
    <%= f.input :title, label: false, placeholder: 'Заголовок' %>
    <%= f.text_area :description %>
    <%= f.button :submit, 'Отправить' %>
<% end %>