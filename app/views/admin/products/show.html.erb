<% if @picture.present? %>
<%= image_tag @picture.image.thumb.url, class: 'alignleft' %>
    <% else %>
    <%= image_tag 'no_image.jpg', class: 'alignleft' %>
<% end %>

<strong>Заголовок:</strong><br>
<%= @product.title %><br>
<strong>Категория:</strong><br>
<%= @product.category.name %><br>
<strong>Цена:</strong><br>
<%= number_to_currency(@product.price.to_d / 100) %><br>
<%= render 'product_items' %>
<strong>Описание:</strong><br>
<%= @product.description.html_safe %><br>
